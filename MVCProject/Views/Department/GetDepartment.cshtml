@model Department
@{
    ViewData["Title"] = "GetDepartment";
}


<div class="p-3 container">
    <h5 class="font-weight-bold">Create New Department</h5>

    <form>
        <div class="form-group">
            <label asp-for="Code"></label>
            <input class="form-control" asp-for="Code" value="@Model.Code" />
            <span class="text-danger" asp-validation-for="Code"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfCreation"></label>
            <input class="form-control" asp-for="DateOfCreation" />
            <span class="text-danger" asp-validation-for="DateOfCreation"></span>
        </div>
    </form>

    <button class="btn p-0"> <a asp-action="Index" class="btn btn-info">Back To Departments</a>  </button>
    <button class="btn p-0"> <a asp-action="Edit" class="btn btn-secondary mx-2" asp-route-id="@Model.Id">Edite Department</a>  </button>

</div>

