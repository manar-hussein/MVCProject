@model Department
@{
    ViewData["Title"] = "Create";
}

<div class="p-3 container">
    <h5 class="font-weight-bold">Create New Department</h5>

    <form asp-action="Create">
        <div class="form-group">
           <label asp-for="Code"></label>
            <input class="form-control" asp-for="Code" value="@Model.Code"/>
           <span class="text-danger" asp-validation-for="Code"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfCreation"></label>
            <input class="form-control" asp-for="DateOfCreation" />
            <span class="text-danger" asp-validation-for="DateOfCreation"></span>
        </div>

        <input class="btn btn-info form-control font-weight-bold my-2" type="submit" />
    </form>

</div>

@section Validation
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
  
}

